{
  "name": "juliangut/slim-php-di",
  "description": "Slim Framework PHP-DI container integration",
  "keywords": [
    "slim",
    "dependency injection",
    "container",
    "php-di"
  ],
  "homepage": "http://github.com/juliangut/slim-php-di",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/slim-php-di",
    "issues": "https://github.com/juliangut/slim-php-di/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-mbstring": "*",
    "php-di/php-di": "^7.0.1",
    "psr/container": "^2.0",
    "slim/slim": "^4.8"
  },
  "require-dev": {
    "bnf/phpstan-psr-container": "^1.0",
    "infection/infection": "~0.27",
    "juliangut/easy-coding-standard-config": "^1.11.1",
    "juliangut/phpstan-config": "^1.0",
    "laminas/laminas-diactoros": "^2.20",
    "overtrue/phplint": "^5.0|^6.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.13",
    "phpstan/phpstan": "^1.11",
    "phpunit/phpunit": "^10.3",
    "povils/phpmnd": "^3.2",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Slim\\PHPDI\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Slim\\PHPDI\\Tests\\": "tests/PHPDI/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
